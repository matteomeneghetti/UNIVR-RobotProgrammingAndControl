<?xml version="1.0"?>

<robot name="scara">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <geometry>
        <box size="0.25 0.25 0.4"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="link_1">
    <visual>
      <origin xyz="0.15 0 0"/>
      <geometry>
        <box size="0.3 0.2 0.2"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="link_2">
    <visual>
      <origin xyz="0.15 0 0"/>
      <geometry>
        <box size="0.3 0.15 0.15"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="link_3">
    <visual>
      <origin xyz="0 0 -0.25"/>
      <geometry>
        <cylinder length="0.5" radius="0.05"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>

  <link name="link_4">
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <cylinder length="0.1" radius="0.025"/>
      </geometry>
    </visual>
  </link>

  <joint name="link1_to_base" type="revolute">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.4"/>
    <axis xyz="0 0 1" />
    <limit effort="300" velocity="0.1" lower="-2.5" upper="2.5"/>
  </joint>

  <joint name="link2_to_link1" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0.3 0 0"/>
    <axis xyz="0 0 1" />
    <limit effort="300" velocity="0.1" lower="-2.0" upper="2.0"/>
  </joint>

    <joint name="link2_to_link3" type="prismatic">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0.3 0 0"/>
    <axis xyz="0 0 1" />
    <limit effort="300" velocity="0.1" lower="0.45" upper="0"/>
  </joint>

  <joint name="link3_to_link4" type="revolute">
    <parent link="link_3"/>
    <child link="link_4"/>
    <origin rpy="0 3.14 0" xyz="0 0 -0.5"  />
    <axis xyz="0 0 1" />
    <limit effort="300" velocity="0.1" lower="-3" upper="3"/>
  </joint>

</robot>
